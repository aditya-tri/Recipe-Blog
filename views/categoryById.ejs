<% if (typeof categoryById !=='undefined' && categoryById.length> 0) { %>
  <% categoryById.forEach(function(recipe, index) { %>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= recipe.category %>
        </li>
      </ol>
    </nav>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
      <a href="/recipe/<%= recipe._id %> " class="col text-center category-link">
        <div class="category-img category-img-lg shadow">
          <img src="/uploads/<%= recipe.img %> " alt="<%= recipe.name %>" loading="lazy">
        </div>
        <div class="pt-1">
          <%= recipe.name %>
        </div>
      </a>
    </div>
    <% } ) %>
      <% } else {%>
        <p>No recipe found!</p>
        <% } %>